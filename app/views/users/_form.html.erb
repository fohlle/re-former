


<%= form_with model: user do |f| %>
<%= f.label :username, "Username"%>
<%= f.text_field :username, :placeholder => "Name here" %><br>
<%= f.label :email, "Email"%>
<%= f.text_field :email, :placeholder => "email"%><br>
<%= f.label :password, "Password"%>
<%= f.password_field :password %><br>
<%= f.submit "Submit" %>
<% end %>

